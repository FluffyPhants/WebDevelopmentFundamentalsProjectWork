<section class="section" id="AMA">
    <p class="title">Ask Me Anything</p>
    <div class="columns">
        <div class="column">

        {{#if hasDatabaseError}}
            <p>Couldn't fetch the questions at the moment, try again later.</p>
        {{else}}
            {{#if questions.length}}
                {{#if session.isLoggedIn}}
                    {{#each questions}}
                    <article class="media">
                        <div class="media-content">
                            <div class="content">
                                <p class="inline">
                                    <strong>{{name}}</strong>
                                </p>
                                <a href="/about/{{id}}/delete">Delete</a>
                                <a href="/about/{{id}}/update">Update</a>
                                <p>
                                        {{question}}
                                </p>
                            </div>
                        </div>
                    </article>
                    {{/each}}
                {{else}}
                    {{#each questions}}
                    <article class="media">
                        <div class="media-content">
                            <div class="content">
                                 <p class="inline">
                                    <strong>{{name}}</strong>
                                </p>
                                <p>
                                        {{question}}
                                </p>
                            </div>
                        </div>
                    </article>
                    {{/each}}
                {{/if}}

                {{else}}
                    <p>No questions have been posted yet!</p>
            {{/if}}
        {{/if}}

        <article class="media">
            <figure class="media-left"></figure>
        </article>
    </div>
  
        <div class="column">

            <form action="/about/post" method="POST">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="field">
                    <label class="label">Name</label>
                    <div class="control">
                        <input class="input" type="text" name="name" placeholder="Text input">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Message</label>
                    <div class="control">
                        <textarea class="textarea" rows="10" name="question" placeholder="Textarea"></textarea>
                    </div>
                </div>

                <div class="field is-grouped is-grouped-right">
                    <div class="control">
                        <input type="submit" value="create" class="button is-link"></input>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>
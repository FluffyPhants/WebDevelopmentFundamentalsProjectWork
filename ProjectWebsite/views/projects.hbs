<section class="section has-text-centered">
  <p class="title">Projects</p>
</section>

{{#if session.isLoggedIn}}
  <section>
    <div class="columns has-text-centered">
      <a href="/projects/create" class="button is-link">create project</a>
    </div>
  </section>
{{/if}}

{{#if hasDatabaseError}}
<p>Couldn't fetch the projects at the moment, try again later.</p>
{{else}}
  {{#if projects.length}}

    <section class="projects">
      {{#each projects}}
          <section class="project">
            <div class="columns">
              <div class="column">
                <img class="project-image" src="{{image1path}}" alt="Placeholder image">
              </div>
              <div class="column">
                <div class="has-tex-left-aligned">
                  <p class="title">{{projectName}}</p>
                  <p class="subtitle">{{description1}}</p>
                </div>
                <div class="has-text-centered">
                  <a href="/project/{{id}}" class="button">Learn more</a>
                </div>
              </div>
            </div>
          </section>
        {{/each}}
    </section>

    {{else}}
      <p>No projects have been posted yet!</p>
  {{/if}}
{{/if}}





</section>